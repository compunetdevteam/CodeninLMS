
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form action="account/api/account/register">  <h3>Register</h3>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" type="text" data-bind="value: registerEmail" id="email"/>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" type="password" data-bind="value: registerPassword" id="pass" />
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input class="form-control" type="password" data-bind="value: registerPassword2" id="pass2"/>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Register</button>
    </div>
</form>